@model FireCodingDesign.Models.ShareDataModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerList.FirstOrDefault().CustomerName" class="control-label"></label>
                <input asp-for="CustomerList.FirstOrDefault().CustomerName" value="" class="form-control" />
                <span asp-validation-for="CustomerList.FirstOrDefault().CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerList.FirstOrDefault().CustomerCompany" class="control-label"></label>
                <input asp-for="CustomerList.FirstOrDefault().CustomerCompany" value="" class="form-control" />
                <span asp-validation-for="CustomerList.FirstOrDefault().CustomerCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerList.FirstOrDefault().Email" class="control-label"></label>
                <input asp-for="CustomerList.FirstOrDefault().Email" value="" class="form-control" />
                <span asp-validation-for="CustomerList.FirstOrDefault().Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerList.FirstOrDefault().Phone" class="control-label"></label>
                <input asp-for="CustomerList.FirstOrDefault().Phone" value="" class="form-control" />
                <span asp-validation-for="CustomerList.FirstOrDefault().Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerList.FirstOrDefault().Company" class="control-label"></label>
                <select asp-for="CustomerList.FirstOrDefault().CompanyId" value="" class="form-control">

                    @foreach (var company in Model.CompanyList)
                    {
                        <option value="@company.CompanyId">@company.CompanyName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
